<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.registrationController">
    <children>
        <Pane prefHeight="300.0" prefWidth="250.0">
            <children>
                <TextField fx:id="logInText" alignment="TOP_CENTER" layoutX="50.0" layoutY="166.0" prefHeight="25.0" prefWidth="149.0" promptText="Nickname" />
                <PasswordField fx:id="passwordText" alignment="TOP_CENTER" layoutX="50.0" layoutY="199.0" promptText="Password" />
                <Label fx:id="instructionText" alignment="CENTER" layoutX="15.0" layoutY="73.0" prefHeight="17.0" prefWidth="220.0" text="Create account" textAlignment="CENTER" />
                <Button fx:id="singupButton" layoutX="50.0" layoutY="231.0" mnemonicParsing="false" onAction="#singupMethod" prefHeight="25.0" prefWidth="149.0" text="Sign Up " />
                <Label alignment="TOP_CENTER" layoutX="50.0" layoutY="34.0" prefHeight="17.0" prefWidth="149.0" text="ITBANK" textAlignment="CENTER" textFill="#9e2828">
                    <font>
                        <Font name="Droid Sans Bold" size="32.0" />
                    </font>
                </Label>
            <TextField fx:id="lastnameField" alignment="BOTTOM_CENTER" layoutX="50.0" layoutY="131.0" prefHeight="25.0" prefWidth="149.0" promptText="Lastname" />
            <TextField fx:id="firstnameField" alignment="BOTTOM_CENTER" layoutX="50.0" layoutY="98.0" prefHeight="25.0" prefWidth="149.0" promptText="Firstname" />
            </children>
        </Pane>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>


</GridPane>
