<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ChangePasswordController">
    <children>
        <Pane prefHeight="300.0" prefWidth="250.0">
            <children>
                <TextField fx:id="newLogInText" alignment="TOP_CENTER" layoutX="50.0" layoutY="138.0" prefHeight="25.0" prefWidth="149.0" promptText="New nickname" />
                <PasswordField fx:id="newPasswordText" alignment="TOP_CENTER" layoutX="50.0" layoutY="170.0" promptText="New password" />
                <Label fx:id="instructionText" alignment="CENTER" layoutX="15.0" layoutY="73.0" prefHeight="17.0" prefWidth="220.0" text="Change password" textAlignment="CENTER" />
                <Button fx:id="changeButton" layoutX="50.0" layoutY="203.0" mnemonicParsing="false" onAction="#changePassMethod" prefHeight="25.0" prefWidth="149.0" text="Change" />
                <Button fx:id="backButton" layoutX="50.0" layoutY="244.0" mnemonicParsing="false" onAction="#backMethod" prefHeight="25.0" prefWidth="149.0" text="Back" />
                <Label alignment="TOP_CENTER" layoutX="50.0" layoutY="34.0" prefHeight="17.0" prefWidth="149.0" text="ITBANK" textAlignment="CENTER" textFill="#9e2828">
                    <font>
                        <Font name="Droid Sans Bold" size="32.0" />
                    </font>
                </Label>
            <PasswordField fx:id="oldPasswordField" alignment="BOTTOM_CENTER" layoutX="50.0" layoutY="106.0" prefHeight="25.0" prefWidth="149.0" promptText="Password" />
            </children>
        </Pane>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>


</GridPane>
